extends layout

block content
  div(class="content")
    h2 Stats
    if namesHidden
      a(href="/stats-with-names") show names
    else
      a(href="/stats") hide names
    ol(style="padding: 0")
      each applicant, i in applicants
        li
          | #{i + 1}.&nbsp;
          if namesHidden
            | xxx (#{applicant.gender})
          else
            | #{applicant.name} (#{applicant.gender})
          | &nbsp;(#{applicant.candidacyScore})
